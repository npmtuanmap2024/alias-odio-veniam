{
    // Designed to be run periodically using lint:strict.

    "env": {
        "browser": false,
        "es2022": true
    },
    "extends": [
        "eslint:all",
        "plugin:@typescript-eslint/strict-type-checked",
        "plugin:unicorn/all",
        "plugin:sonarjs/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 2022,
        "sourceType": "module",
        "project": "./eslint-strict.tsconfig.json"
    },
    "plugins": [
        "@typescript-eslint",
        "@stylistic/js",
        "@stylistic/ts",
        "import",
        "unicorn",
        "sonarjs"
    ],
    "rules": {

        // "@stylistic/js/max-statements-per-line": ["error", { "max": "1" }],

        "sort-imports": "off",
        "sort-keys": "off",
        "one-var": ["error", "never"],
        "require-unicode-regexp": "off",
        "func-style": ["error", "declaration", { "allowArrowFunctions": true }],
        "capitalized-comments": "off",
        "prefer-named-capture-group": "off",
        "id-length": "off",
        "curly": ["error", "multi-line"],
        "max-lines-per-function": ["error", 55],
        "max-statements": ["error", 25],
        "max-params": ["error", 5],
        "no-ternary": "off",
        "prefer-template": "off",
        "multiline-comment-style": "off",
        "unicorn/no-process-exit": "off",
        "no-undefined": "off",
        "unicorn/no-array-callback-reference": "off",
        "prefer-destructuring": ["error", {"object": true, "array": false}],
        "no-void": "off",
        "init-declarations": "off",
        "no-continue": "off",
        "no-duplicate-imports": "off",


        "unicorn/filename-case": "off",
        "unicorn/switch-case-braces": ["error", "avoid"],
        "unicorn/explicit-length-check": "off",
        "unicorn/empty-brace-spaces": "off",
        "unicorn/better-regex": "off",
        "unicorn/prefer-json-parse-buffer": "off",
        "unicorn/prefer-string-replace-all": "off",

        "import/no-named-default": "warn",
        "import/no-unused-modules": "error",
        "import/no-named-as-default-member": "warn",
        "import/no-anonymous-default-export": "error",
        "import/no-duplicates": "error",
        "import/order": "off",

        "sonarjs/prefer-immediate-return": "off",

        "@stylistic/ts/padding-line-between-statements": "off",

        "@typescript-eslint/no-use-before-define": "off",
        "no-use-before-define": "off",
        "@typescript-eslint/no-non-null-assertion": "off",
        "no-shadow": "off",
        "@typescript-eslint/no-shadow": "error",
        "@typescript-eslint/no-for-in-array": "error",
        "@typescript-eslint/no-floating-promises": "error",
        "@typescript-eslint/no-unused-vars": "error",
        "@typescript-eslint/naming-convention": [
            "error",
            {
                "selector": [
                    "parameter",
                    "variable"
                ],
                "leadingUnderscore": "forbid",
                "filter": {
                    "regex": "_*",
                    "match": false
                },
                "format": null
            },
            {
                "selector": "parameter",
                "leadingUnderscore": "allow",
                "format": null,
                "modifiers": [
                    "unused"
                ]
            }
        ]

    }
}